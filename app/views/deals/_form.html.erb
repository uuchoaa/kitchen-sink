<%= form_with(model: deal, class: "contents") do |form| %>
  <% if deal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul class="list-disc ml-6">
        <% deal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :agency_id %>
    <%= form.text_field :agency_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:agency_id].none?, "border-red-400 focus:outline-red-600": deal.errors[:agency_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recruter_id %>
    <%= form.text_field :recruter_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:recruter_id].none?, "border-red-400 focus:outline-red-600": deal.errors[:recruter_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :stage %>
    <%= form.number_field :stage, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:stage].none?, "border-red-400 focus:outline-red-600": deal.errors[:stage].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
